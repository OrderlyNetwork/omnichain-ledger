{
  "name": "staking",
  "version": "0.1.0",
  "license": "MIT",
  "files": [
    "abi",
    "artifacts",
    "contracts",
    "deployments",
    "exports",
    "types"
  ],
  "scripts": {
    "clean": "hardhat clean",
    "build": "hardhat compile",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix '**/*.{js,jsx,ts,tsx}'",
    "merkle:create": "ts-node scripts/merkle-tree/generate-merkle-tree.ts",
    "test": "hardhat test",
    "test:forge": "forge test -vvv",
    "test:deploy": "RUN_TEST=true yarn hardhat node",
    "test:all": "yarn test && yarn test:forge && yarn test:deploy",
    "test:coverage": "hardhat coverage && hardhat compile --force",
    "solhint": "solhint 'contracts/**/*.sol' --fix",
    "myth": "myth analyze contracts/**/*.sol --solc-json remapping-myth.json --execution-timeout 30",
    "slither": "slither .",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,md,json,yml}'"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@layerzerolabs/lz-evm-messagelib-v2": "^2.3.7",
    "@layerzerolabs/lz-evm-oapp-v2": "^2.3.7",
    "@layerzerolabs/lz-evm-protocol-v2": "^2.3.7",
    "@layerzerolabs/lz-v2-utilities": "^2.3.7",
    "@layerzerolabs/test-devtools-evm-hardhat": "^0.2.3",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.1",
    "@openzeppelin/contracts-upgradeable": "^4.9.1",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@openzeppelin/merkle-tree": "^1.0.5",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "bs58": "^4.0.1",
    "chai": "^4.2.0",
    "dotenv": "^16.0.3",
    "ethers": "^5.4.7",
    "hardhat": "^2.16.1",
    "hardhat-deploy": "^0.11.26",
    "hardhat-deploy-ethers": "^0.3.0-beta.11",
    "hardhat-gas-reporter": "^1.0.8",
    "orderly-network-config": "https://gitlab.com/orderlynetwork/orderly-v2/network_config.git",
    "prettier": "^3.0.0",
    "solhint": "^3.4.1",
    "solidity-bytes-utils": "^0.8.2",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  }
}
