{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "compiler-version": ["error", "0.8.22"],
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "no-unused-vars": "error",
    "state-visibility": "error",
    "reason-string": "off",
    "not-rely-on-time": "off",
    "no-empty-blocks": "off"
  }
}
